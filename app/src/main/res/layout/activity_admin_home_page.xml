<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminHomePage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbHomePage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:clickable="true"
        android:minHeight="?attr/actionBarSize"
        android:onClick="logout"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Home page"
        tools:layout_editor_absoluteX="1dp" />

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="595dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbHomePage"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnMenuItems"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:onClick="menuLoad"
            android:text="menu items"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnIncomingOrders"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:onClick="incomingOrderLoad"
            android:text="incoming orders"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnFeedback"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:onClick="sendNotifcationLoad"
            android:text="Send Notifications"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnFeedback"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20dp"
            android:onClick="feedbackLoad"
            android:text="Feedback"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnAccountSetting"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20sp"
            android:onClick="accountSettingLoad"
            android:text="Account Settings"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="20sp"
            android:onClick="register"
            android:text="Create Account"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>